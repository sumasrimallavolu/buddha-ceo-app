#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo "üîç Running pre-push checks..."

# Run type check
echo "‚ñ∂Ô∏è Checking TypeScript types..."
npm run type-check
TYPE_STATUS=$?

# Run linting
echo "‚ñ∂Ô∏è Running ESLint..."
npm run lint
LINT_STATUS=$?

if [ $TYPE_STATUS -ne 0 ] || [ $LINT_STATUS -ne 0 ]; then
  echo ""
  echo "‚ùå Pre-push checks failed!"
  echo "   - TypeScript: $([ $TYPE_STATUS -eq 0 ] && echo '‚úÖ PASSED' || echo '‚ùå FAILED')"
  echo "   - ESLint: $([ $LINT_STATUS -eq 0 ] && echo '‚úÖ PASSED' || echo '‚ùå FAILED')"
  echo ""
  echo "Please fix the errors before pushing."
  exit 1
fi

echo "‚úÖ All checks passed! Proceeding with push..."
